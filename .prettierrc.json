{
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 80,
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "jsxSingleQuote": true,
    "importOrderSeparation": true,
    "tailwindFunctions": ["clsx", "cva", "cn"],
    "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"]
}